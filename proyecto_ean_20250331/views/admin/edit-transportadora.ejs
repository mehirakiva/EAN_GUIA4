<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Transportadora</h1>
    <a href="/admin/transportadoras" class="btn btn-secondary">Volver</a>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="mb-0">Informaci√≥n de la Transportadora</h3>
    </div>
    <div class="card-body">
      <form action="/admin/transportadoras/editar/<%= transportadora.id %>" method="POST">
        <div class="mb-3">
          <label class="form-label">Nombre de la Transportadora</label>
          <input type="text" class="form-control" name="nombre_transportadora" 
                 value="<%= transportadora.nombre_transportadora %>" required>
        </div>
        
        <div class="d-flex justify-content-end gap-2">
          <a href="/admin/transportadoras" class="btn btn-secondary">Cancelar</a>
          <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>