<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Nuevo Estado de Envío</h1>
    <a href="/admin/estado-envio" class="btn btn-secondary">Volver</a>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="mb-0">Información del Envío</h3>
    </div>
    <div class="card-body">
      <form action="/admin/estado-envio" method="POST">
        <div class="mb-3">
          <label class="form-label">Pedido</label>
          <select class="form-select" name="id_pedido" required>
            <option value="">Seleccione un pedido...</option>
            <% pedidos.forEach(p => { %>
              <option value="<%= p.id %>">
                #<%= p.id %> - <%= p.producto %> (<%= p.cliente_nombre %>)
              </option>
            <% }); %>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Transportadora</label>
          <select class="form-select" name="transportadora_id" required>
            <option value="">Seleccione una transportadora...</option>
            <% transportadoras.forEach(t => { %>
              <option value="<%= t.id %>"><%= t.nombre_transportadora %></option>
            <% }); %>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Estado</label>
          <select class="form-select" name="estado" required>
            <% estados.forEach(e => { %>
              <option value="<%= e %>"><%= e.charAt(0).toUpperCase() + e.slice(1) %></option>
            <% }); %>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Observaciones</label>
          <textarea class="form-control" name="observaciones" rows="3"></textarea>
        </div>
        
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary">Guardar Estado</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>