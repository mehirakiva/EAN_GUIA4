<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Editar Estado de Envío #<%= estadoEnvio.id %></h1>
    <a href="/admin/estado-envio" class="btn btn-secondary">Volver</a>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="mb-0">Información del Envío</h3>
    </div>
    <div class="card-body">
      <form action="/admin/estado-envio/editar/<%= estadoEnvio.id %>" method="POST">
        <div class="mb-3">
          <label class="form-label">Pedido</label>
          <input type="text" class="form-control" 
                 value="Pedido #<%= estadoEnvio.id_pedido %>" disabled>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Transportadora</label>
          <select class="form-select" name="transportadora_id" required>
            <% transportadoras.forEach(t => { %>
              <option value="<%= t.id %>" 
                <%= t.id == estadoEnvio.transportadora_id ? 'selected' : '' %>>
                <%= t.nombre_transportadora %>
              </option>
            <% }); %>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Estado</label>
          <select class="form-select" name="estado" required>
            <% estados.forEach(e => { %>
              <option value="<%= e %>" 
                <%= e == estadoEnvio.estado ? 'selected' : '' %>>
                <%= e.charAt(0).toUpperCase() + e.slice(1) %>
              </option>
            <% }); %>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label">Observaciones</label>
          <textarea class="form-control" name="observaciones" rows="3">
            <%= estadoEnvio.observaciones || '' %>
          </textarea>
        </div>
        
        <div class="d-flex justify-content-end gap-2">
          <a href="/admin/estado-envio" class="btn btn-secondary">Cancelar</a>
          <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>