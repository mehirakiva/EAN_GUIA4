<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Crear Nuevo Usuario</h1>
    <a href="/admin/users" class="btn btn-secondary">Volver</a>
  </div>

  <div class="card">
    <div class="card-header">
      <h3 class="mb-0">Informaci칩n del Usuario</h3>
    </div>
    <div class="card-body">
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger">
          <% errors.forEach(error => { %>
            <p class="mb-1"><%= error.text %></p>
          <% }); %>
        </div>
      <% } %>

      <form action="/admin/users" method="POST">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Nombre Completo</label>
            <input type="text" class="form-control" name="name" 
                   value="<%= typeof name !== 'undefined' ? name : '' %>" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label">Correo Electr칩nico</label>
            <input type="email" class="form-control" name="email" 
                   value="<%= typeof email !== 'undefined' ? email : '' %>" required>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label">Contrase침a</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="col-md-6 mb-3">
            <label class="form-label">Confirmar Contrase침a</label>
            <input type="password" class="form-control" name="confirm_password" required>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">Rol</label>
          <select class="form-select" name="role" required>
            <option value="">Seleccione un rol...</option>
            <% roles.forEach(r => { %>
              <option value="<%= r %>" 
                <%= typeof selectedRole !== 'undefined' && selectedRole === r ? 'selected' : '' %>>
                <%= r.charAt(0).toUpperCase() + r.slice(1) %>
              </option>
            <% }); %>
          </select>
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary">Crear Usuario</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>